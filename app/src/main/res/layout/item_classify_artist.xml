<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:id="@+id/classify_artist_background"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:background="@color/_E1E1E5"
        android:padding="10dp">

        <ImageView
            android:id="@+id/classify_artist_headimage"
            android:layout_width="112dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@color/_ededed"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/classify_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/classify_artist_headimage"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/classify_artist_headimage"
            android:maxLines="1"
            android:text="未找到名称"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/classify_artist_intro"
            style="@style/text_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lllayout"
            android:layout_alignLeft="@+id/classify_artist_name"
            android:layout_below="@+id/classify_artist_name"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:text="暂无简介"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/lllayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/classify_artist_headimage"
            android:layout_alignLeft="@+id/classify_artist_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classify_artist_guanzhu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_guanzhu"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/classify_artist_liulan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_card_liulan_white"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/classify_artist_zan"
                style="@style/text_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_card_zan_white"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/classify_artist_song"
                style="@style/text_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_card_song_white"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>