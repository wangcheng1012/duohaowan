<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/i_mywork_day"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="#1c1c1c"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/i_mywork_money"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/i_mywork_day"
        android:layout_toRightOf="@+id/i_mywork_day"
        android:text="12月"
        android:textColor="#262626"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/i_mywork_name"
        style="@style/text_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/i_mywork_day"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/i_mywork_money"
        android:text="作品名称"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/i_mywork_del"
        style="@style/text_base"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/i_mywork_day"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:gravity="bottom"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/i_mywork_name"
        android:layout_below="@+id/i_mywork_name"
        android:layout_marginTop="5dp"
        android:background="@color/_e2e2e2" />

    <ImageView
        android:id="@+id/i_mywork_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignLeft="@+id/i_mywork_name"
        android:layout_below="@+id/i_mywork_name"
        android:layout_marginTop="15dp"
        android:background="@color/_e2e2e2" />

    <RelativeLayout
        android:id="@+id/item_home_recyclerView_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/i_mywork_image"

        android:layout_marginTop="10dp"
        android:background="@color/_ededed"
        android:padding="5dp"
        android:layout_alignLeft="@+id/i_mywork_image"
        android:layout_alignStart="@+id/i_mywork_image">


        <TextView
            android:id="@+id/i_mywork_zan"
            style="@style/item_home_handle_textview"
            android:drawableLeft="@drawable/icon_zan"
            android:text="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/i_mywork_guanzhu"
            style="@style/item_home_handle_textview"
            android:drawableLeft="@drawable/icon_guanzhu"
            android:text="0"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/i_mywork_viewcount"
            style="@style/item_home_handle_textview"
            android:drawableLeft="@drawable/icon_liulan"
            android:text="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <!--<View-->
        <!--android:id="@+id/view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@id/item_home_recyclerView_bg"-->

        <!--android:background="@color/black2" />-->


</RelativeLayout>