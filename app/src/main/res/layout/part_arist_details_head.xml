<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/arist_details_head_backgroundimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_preimg"
            android:layout_alignEnd="@+id/head_preimg"
            android:layout_alignLeft="@+id/head_preimg"
            android:layout_alignRight="@+id/head_preimg"
            android:layout_alignStart="@+id/head_preimg"
            android:layout_alignTop="@+id/head_preimg"
            android:adjustViewBounds="true"
            android:background="@color/_e2e2e2"
            android:scaleType="fitXY"  />

        <ImageView
            android:id="@+id/head_preimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_head_bg" />


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp">

            <ImageView
                android:id="@+id/arist_details_headimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/arist_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/arist_details_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="书法家 重庆"
                android:textColor="@color/white"

                />

        </LinearLayout>


        <ImageView
            android:id="@+id/p_arist_head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/icon_back_white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/my_dy"
            style="@style/text_base"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0" />

        <TextView
            style="@style/text_base"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_dy"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="动态" />

        <TextView
            android:id="@+id/my_guanzhu"
            style="@style/text_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0" />

        <TextView
            style="@style/text_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_guanzhu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="关注" />


        <TextView
            android:id="@+id/my_fensi"
            style="@style/text_base"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="0" />

        <TextView
            style="@style/text_base"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_fensi"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="粉丝" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/_e2e2e2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:text="简介"
        android:textColor="@color/black1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/_e2e2e2" />

    <TextView
        android:id="@+id/my_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:padding="10dp"
        android:text="暂无简介"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/_e2e2e2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:text="作品"
        android:textColor="@color/black1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/_e2e2e2" />

</LinearLayout>
